{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "impliedStrict": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "eqeqeq": ["error"],
    "indent": ["error", 2],
    "no-console": ["error"],
    "prefer-const": ["error"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error"],
    "sort-keys": ["error"],
    "sort-vars": ["error"]
  }
}
